---
import { Tabs, TabItem, Code } from "@astrojs/starlight/components";

import { generate } from "./generate-content";
import { extractContent } from "../utils/extract-text-from-html";

const scriptRendered = await Astro.slots.render("default");

const { whatsapp } = generate(extractContent(scriptRendered));
---

<Tabs>
  <TabItem label="WhatsApp Web">
    <Code code={whatsapp} lang="js" />
  </TabItem>
</Tabs>
